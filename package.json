{
  "name": "@midly/react-dropdown",
  "version": "2.1.1",
  "description": "React-dropdown is a simplest way to create a dropdown on your ReactJS site.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts, tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichelD-dev/react-dropdown.git"
  },
  "keywords": [
    "react",
    "react-component",
    "typescript",
    "dropdown",
    "select",
    "combobox"
  ],
  "author": "MichelD-dev <delaunaymichel@hotmail.fr>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MichelD-dev/react-dropdown/issues"
  },
  "homepage": "https://github.com/MichelD-dev/react-dropdown#readme",
  "devDependencies": {
    "@types/react": ">=16",
    "@types/react-dom": ">=16",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.4",
    "react": ">=16",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  }
}
